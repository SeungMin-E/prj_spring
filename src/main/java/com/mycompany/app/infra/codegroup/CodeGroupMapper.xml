<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <!-- 전체 매퍼중에서 유일한 값을 사용해야한다. 해서 관계적으로 해당 파일의 패스와 파일이름(확장제외) 그리고 dao에서 namespace와 일치해야한다. -->
<mapper namespace="com.mycompany.app.infra.codegroup.CodeGroupMapper">
				     		
	<!-- select 결과를 받을 객체 -->		   
    <resultMap id="resultMapObj" type="com.mycompany.app.infra.codegroup.CodeGroup"></resultMap>
    
	<select id="selectList" resultMap="resultMapObj">
		<!-- select
			 seq,
			 gender
		 from codeGroup -->
		 
		 SELECT 
		 	*
		 FROM
		 	codeGroup
		 where	
		 	name like concat('%',#{getGenkeyword},'%')
	</select>
	
	<select id="selectOne" resultMap="resultMapObj">
		SELECT *
		FROM
			codeGroup
		WHERE
			seq = #{seq}
	</select>
	<!-- where gender LIKE CONCAT('%' + #{} + '%') -->
	
	<insert id="insertOne">
		INSERT INTO
			codeGroup(
				gender
				, name
				, delNy
			)
		VALUES(
			#{gender}
			, #{name}
			, 0
		)
	</insert>
	
	<update id="updateOne">
		UPDATE codeGroup
		SET
			name = #{name}
		WHERE
			seq = #{seq}
	</update>
	
	<update id="uele">
		UPDATE codeGroup
		SET
			delNy = 1
		WHERE
			seq = #{seq}
	</update>
	
	<delete id="deleteOne">
		DELETE FROM
			codeGroup
		WHERE 
			seq = #{seq}
	</delete>
	
	    
</mapper>    